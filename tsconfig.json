{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist/js",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "excluded": [
    "**/*.wasm"
  ],
  "include": [
    "./src/**/**/*"
  ]
}